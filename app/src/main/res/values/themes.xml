<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunrinHackaton" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_tonedown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="textColor">@color/flatBlack</item>

        <item name="button1TextColor">@color/white_10</item>
        <item name="button1BackgroundColor">@color/primary</item>

        <item name="inputTextColor">@color/black_30</item>
        <item name="inputBackgroundColor">?attr/editTextBackground</item>

        <!-- Custom Style -->
        <item name="android:textViewStyle">@style/customTextStyle</item>
        <item name="android:buttonStyle">@style/customButton1Style</item>
        <item name="editTextStyle">@style/customEditTextStyle</item>


<!--        <item name="android:fontFamily">@font/font</item>-->
    </style>

    <style name="customTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="customButton1Style" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/button1TextColor</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingVertical">12dp</item>

        <item name="android:backgroundTint">?attr/button1BackgroundColor</item>
        <item name="android:background">@drawable/sh_square_12</item>
    </style>

    <style name="customEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColorHint">#949494</item>

        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>

        <item name="android:backgroundTint">?attr/inputBackgroundColor</item>
        <item name="android:background">@drawable/sh_square_12</item>
    </style>
</resources>